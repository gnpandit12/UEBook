<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB4E7B"
    tools:context=".ui.login_register.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
    <ImageView
        android:id="@+id/back_bt"
        android:layout_marginTop="30dp"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/xmarkwhite"
        />

    <EditText
        android:id="@+id/first_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:hint="First Name"
        android:backgroundTint="#FFF"
        android:textColor="#FFF"
        android:textColorHint="#DDAAAAAA"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/last_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/first_name_et"
        android:backgroundTint="#FFF"
        android:textColor="#FFF"
        android:singleLine="true"
        android:textColorHint="#DDAAAAAA"
        android:hint="Last Name"/>

    <EditText
        android:id="@+id/phone_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/last_name_et"
        android:hint="Phone Number"
        android:backgroundTint="#FFF"
        android:singleLine="true"
        android:textColor="#FFF"
        android:textColorHint="#DDAAAAAA"
        android:inputType="phone" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_et"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFF"
        android:textColor="#FFF"
        android:textColorHint="#DDAAAAAA"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/sh_password1"
        android:layout_below="@+id/email_et"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFF"
        android:textColor="#FFF"
        android:singleLine="true"
        android:textColorHint="#DDAAAAAA"
        android:hint="Password"/>

    <ImageView
        android:id="@+id/sh_password1"
        android:layout_below="@+id/email_et"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="27dp"
        android:layout_height="27dp"

        android:src="@drawable/placeh"/>

    <EditText
        android:id="@+id/confirm_pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_et"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/sh_password2"
        android:backgroundTint="#FFF"
        android:textColor="#FFF"
        android:singleLine="true"
        android:textColorHint="#DDAAAAAA"
        android:hint="Confirm Password"/>

    <ImageView
        android:id="@+id/sh_password2"
        android:layout_below="@+id/password_et"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/placeh"/>

    <Button
        android:id="@+id/create_acc_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/button_border"
        android:textColor="#FFF"

        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="CREATE ACCOUNT"/>
    </RelativeLayout>



</RelativeLayout>