<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileActivity">

    <RelativeLayout
        android:id="@+id/top_bar_profile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/green"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/profile_back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/green"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/top_tv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/profile_back_btn"

            android:padding="10dp"

            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#EAEAEA"
            android:textSize="25dp" />


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/top_bar_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/land4" />

    <RelativeLayout
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/profile_name_icon"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/name_heading_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/profile_name_icon"
            android:text="Name" />

        <TextView
            android:id="@+id/profile_name_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_heading_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/profile_name_icon"
            android:text="Emilt H"
            android:textColor="#000"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/profile_bio_icon"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/email_heading"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/profile_bio_icon"
            android:text="Email" />

        <TextView
            android:id="@+id/profile_email_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_heading"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/profile_bio_icon"
            android:maxLines="4"
            android:text="sample@email.com"
            android:textColor="#000"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/profile_phone_icon"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/profile_heading_phone_no"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/profile_phone_icon"
            android:text="Phone No"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/profile_phone_no_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_heading_phone_no"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/profile_phone_icon"
            android:text="+919999911111"
            android:textColor="#000" />
    </RelativeLayout>

</RelativeLayout>